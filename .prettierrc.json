{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "proseWrap": "preserve",
  "jsxSingleQuote": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@src/(.*)$",
    "^@app/(.*)$",
    "^@components/(.*)$",
    "^@ui/(.*)$",
    "^@hooks/(.*)$",
    "^@constants",
    "^@types",
    "^@utils",
    "^@data",
    "^@assets",
    "^[./]"
  ]
}
